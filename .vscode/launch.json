{
     "version": "0.2.0",
     "configurations": [
       {
         "type": "node",
         "request": "launch",
         "name": "Mocha Tests",
         "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
         "args": [
           "-u", "bdd",
           "-t", "999999",
           "--colors",
           "${workspaceFolder}/tests"
         ],
         "internalConsoleOptions": "openOnSessionStart",
         "skipFiles": [
           "<node_internals>/**"
         ]
       }
     ]
   }
